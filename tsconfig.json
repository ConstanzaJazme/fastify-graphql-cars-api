{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "preserve",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}